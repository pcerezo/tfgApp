<!DOCTYPE HTML>

<html>
	<head>
		{% block title %}
		{% endblock %}

		<meta http-equiv="content-type" content="text/html; charset=utf-8" />
        <meta name="description" content="" />
        <meta name="keywords" content="" />
        <link rel="stylesheet" href="styleTailwind.css" />
        <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:700italic,400,300,700' rel='stylesheet' type='text/css'>
        <!--[if lte IE 8]><script src="js/html5shiv.js"></script><![endif]-->
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
        <script src="js/skel.min.js"></script>
        <script src="js/skel-panels.min.js"></script>
        <script src="js/init.js"></script>
        <noscript>
            <link rel="stylesheet" href="css/skel-noscript.css" />
            <link rel="stylesheet" href="css/style.css" />
            <link rel="stylesheet" href="css/style-desktop.css" />
        </noscript>
        <!--[if lte IE 8]><link rel="stylesheet" href="css/ie/v8.css" /><![endif]-->
        <!--[if lte IE 9]><link rel="stylesheet" href="css/ie/v9.css" /><![endif]-->

        {% block link_meta %}{% endblock %}
	</head>
	<body class="">
	<!-- Header -->
    <div id="header">
        <div class="container-fluid h-24 grid grid-cols-12 bg-blue-200">
            <!-- Logo -->
            <div id="logo" class="self-center col-start-4 col-span-5">
                <h1><a href="#">Contaminación lúminica en Granada</a></h1>
            </div>
            <!-- Nav -->
            <nav id="nav" class="self-center col-start-9 col-span-4">
                <ul>
                    <li class="{{ activeInicio }}"><a href="/">Inicio</a></li>
                    <li class="{{ activeBusqueda }}"><a href="/busqueda/mapas_fotos">Mapas y datos</a></li>
                    <li class="{{ activeContacto }}"><a href="/contacto">Contacto</a></li>
                    {% if logueado == false %}
                    <li class="{{ activeLogin }}"><a href="/login">Login</a></li>
                    {% else %}
                    <li><a href="/logout">Logout</a></li>
                    {% endif %}
                </ul>
            </nav>
        </div>
    </div>
    <div id="page">
        <div class="grid grid-cols-6 gap-5">
        {% block banner %}{% endblock %}
        {% if logueado == true and app.request.attributes.get('_route') != 'user' %}
            <div id="usuario" class="col-start-5 col-span-2 ml-16 mr-16 mt-5 pl-8 pr-4 text-2xl border-double border-4 ">
                <div class="grid grid-cols-2 gap-4 flex justify-items-center">
                    <p class="font-bold">{{ nombrecompleto }}</p>
                    {% if fotoPerfil != "" and fotoPerfil != null %}
                    <img src="/uploads/fotos_perfil/{{fotoPerfil}}" width="100" height="100">
                    {% endif %}
                    <p>Alias: "{{ nick }}."</p>
                    <p>Rol: {{role.rango}}</p>
                    <p class="col-span-2">Biografía: {{ bio }}</p>
                    <a href="/user">Ir al perfil</a>
                </div>
            </div>
        {% endif %}
        </div>
        <!-- Header -->

        <!-- Main -->

        {% block main_container %}
        {% endblock %}
        

    </div>
	<!-- /Main -->
    <!--Margen usuario-->
    
    <!--/Margen usuario-->
	<!-- Footer -->
    <footer class="container-fluid h-24 border-solid border-t-2">
    {% block footer %} {% endblock %}
    </footer>
	<!-- /Footer -->
	<!-- Copyright -->
		
	</body>
</html>