<!DOCTYPE HTML>

<html>
	<head>
		{% block title %}
		{% endblock %}

		<meta http-equiv="content-type" content="text/html; charset=utf-8" />
        <meta name="description" content="" />
        <meta name="keywords" content="" />
        <link rel="stylesheet" href="styleTailwind.css" />
        <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:700italic,400,300,700' rel='stylesheet' type='text/css'>
        <!--[if lte IE 8]><script src="js/html5shiv.js"></script><![endif]-->
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
        <script src="js/skel.min.js"></script>
        <script src="js/skel-panels.min.js"></script>
        <script src="js/init.js"></script>
        <noscript>
            <link rel="stylesheet" href="css/skel-noscript.css" />
            <link rel="stylesheet" href="css/style.css" />
            <link rel="stylesheet" href="css/style-desktop.css" />
        </noscript>
        <!--[if lte IE 8]><link rel="stylesheet" href="css/ie/v8.css" /><![endif]-->
        <!--[if lte IE 9]><link rel="stylesheet" href="css/ie/v9.css" /><![endif]-->

        {% block link_meta %}{% endblock %}
	</head>
	<body class="">
	<!-- Header -->
    <div id="header">
        <div class="container-fluid h-24 grid grid-cols-12 bg-blue-200">
            <!-- Logo -->
            <div id="logo" class="self-center col-start-4 col-span-5">
                <h1><a href="#">Contaminación lúminica en Granada</a></h1>
            </div>
            <!-- Nav -->
            <nav id="nav" class="self-center col-start-9 col-span-4">
                <ul>
                    <li class="{{ activeInicio }}"><a href="/">Inicio</a></li>
                    <li class=""><a href="/busqueda/mediciones_fotos">Mapas y datos</a></li>
                    <li class="{{ activeContacto }}"><a href="/contacto">Contacto</a></li>
                    {% if logueado == false %}
                    <li class="{{ activeLogin }}"><a href="/login">Login</a></li>
                    {% else %}
                    <li><a href="/logout">Logout</a></li>
                    {% endif %}
                </ul>
            </nav>
        </div>
    </div>
    <div id="page">
        <div class="grid grid-cols-6 gap-5">
        {% block banner %}{% endblock %}
        
        <!--Margen usuario-->
        {% block resumen_login %}{% endblock %}
        <!--/Margen usuario-->
        </div>
        <!-- Header -->

        <!-- Main -->
        {% block main_container %}
        {% endblock %}
        <!-- /Main -->

    </div>

	<!-- Footer -->
    <footer class="container-fluid h-24 border-solid border-t-2">
    {% block footer %} {% endblock %}
    </footer>
	<!-- /Footer -->
	<!-- Copyright -->
		
	</body>
</html>