{% extends 'portada/base.html.twig' %}

{% block title %}<title>Mi Perfil</title>{% endblock %}

{% block main_container %}
<div id="main" class="container-fluid h-screen grid grid-cols-3 gap-4">
    {% if editar == false %}
    <div id="perfil" class="h-1/2 col-start-2 pl-52 pr-32 grid justify-items-center flex items-center">
        {% if fotoPerfil != "" and fotoPerfil != null %}
        <img src="/uploads/fotos_perfil/{{fotoPerfil}}" width="100" height="100">
        {% endif %}
        <p class="text-2xl">{{ nombrecompleto }}</p>
        <p class="justify-self-start">Alias: {{ nick }} </p>
        <p class="justify-self-start">Role: {{role.rango}} </p>
        <label>Un poco sobre mí: {{ bio }}</label>
        {{ form(formBotonEditarPerfil) }}
    </div>
    {% else %}
    <div class="h-1/2 col-start-2 pl-52 pr-32 grid justify-items-center flex items-center">
        <p class="text-2xl">{{ nombrecompleto }}</p>
        <p class="justify-self-start">Alias: {{ nick }} </p>
        <p class="justify-self-start">Role: {{role.rango}} </p>
        <label>Un poco sobre mí: {{ bio }}</label>
        {{ form(form) }}
    </div>
    {% endif %}
</div>
{% endblock %}
